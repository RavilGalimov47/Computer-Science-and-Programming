courses = {
    'Курс1': {'места': 30, 'средний_балл': 90, 'волна': 'первая'},
    'Курс2': {'места': 20, 'средний_балл': 75, 'волна': 'первая'},
    'Курс3': {'места': 25, 'средний_балл': 60, 'волна': 'вторая'},
    'Курс4': {'места': 15, 'средний_балл': 50, 'волна': 'третья'}
}

распределение = {}


def показать_курсы(баллы):
    доступные_курсы = []
    for курс, данные in courses.items():
        if данные['места'] > 0 and баллы >= данные['средний_балл']:
            доступные_курсы.append(курс)
    return доступные_курсы


def показать_свободные_места():
    for курс, данные in courses.items():
        print(f'{курс}: {данные["места"]} свободных мест')


def распределить_студента(студент, выбранный_курс):
    if выбранный_курс in courses and courses[выбранный_курс]['места'] > 0:
        распределение[студент] = выбранный_курс
        courses[выбранный_курс]['места'] -= 1
        print(f'Студент {студент} распределен на курс {выбранный_курс}')
    else:
        print('Выбранный курс недоступен или нет свободных мест.')


def показать_текущее_распределение():
    print('Текущее распределение:')
    for студент, курс in распределение.items():
        print(f'{студент} - {курс}')


def показать_все_курсы():
    print('Все доступные курсы:')
    for курс, данные in courses.items():
        print(f'{курс} - Места: {данные["места"]}, Средний балл: {данные["средний_балл"]}, Волна: {данные["волна"]}')


while any(места > 0 for места in [данные['места'] for данные in courses.values()]):
    print('\nДобро пожаловать! Введите информацию о студенте:')
    фио = input('ФИО: ')
    группа = input('Номер группы: ')
    баллы = int(input('Список баллов: '))

    доступные_курсы = показать_курсы(баллы)

    if доступные_курсы:
        print('Доступные курсы:')
        for i, курс in enumerate(доступные_курсы, 1):
            print(f'{i}. {курс}')

        выбор = int(input('Выберите номер курса: '))
        выбранный_курс = доступные_курсы[выбор - 1]

        распределить_студента(фио, выбранный_курс)
    else:
        print('Курсы не доступны для данного балла.')

    показать_свободные_места()

показать_текущее_распределение()
